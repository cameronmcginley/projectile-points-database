// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// For visualization
generator dbml {
  provider = "prisma-dbml-generator"
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model projectile_point {
  id              Int     @default(autoincrement())
  name_id         String  @id
  name            String?
  // Name details
  // namers          String[]
  named_for       String?
  year_identified Int?
  type_site       String?
  // Background
  glacial_period  String?
  cultural_period String?
  culture         String?
  phase           String?
  tradition       String?
  date_info       String?
  // Projectile point info
  variant         String?
  short_for       String?
  // Akas should link here when searching for them
  // aka_list        String[]
  cluster         String?
  // material        String[]
  point_validity  String?
  // similar_points
  description     String?
}

