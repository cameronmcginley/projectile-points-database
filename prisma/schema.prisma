// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// For visualization
generator dbml {
  provider = "prisma-dbml-generator"
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model projectile_point {
  name_id               String   @id
  name                  String
  // Name details
  namers                String[]
  named_for             String?
  year_identified       Int?
  type_site             String?
  // Background
  glacial_period        String?
  canadian_period       String?
  cultural_period       String?
  culture               String?
  phase                 String?
  tradition             String?
  year_range_start      Int?
  // BP or AD
  year_range_start_type String?
  year_range_end        Int?
  year_range_end_type   String?
  // Projectile point info
  variant               String?
  short_for             String?
  // Akas should link here when searching for them
  aka                   String[]
  cluster               String?
  point_validity        String?
  description           String?
  // List of similar points, stores name_id's
  similar_point         String[]
}
